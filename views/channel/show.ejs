  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <h2><%= channel.name %><small> currently live</small></h2>
        <div id="localVideoContainer" style="width:640px;height:480px;background-color:#ccc;margin-bottom:10px;overflow:hidden;"></div>
        <div class="row h4">
          <div class="col-lg-1">
            <span class="glyphicon glyphicon-eye-open"></span> <em id="viewers">33</em>
          </div>
          <div class="col-lg-1">
            <span class="glyphicon glyphicon-user"></span> <em id="peers">4</em>
          </div>

        </div>
        <!--  
          <h4>Description</h4>
          <p>For those who can't come to lecture</p> 
          -->
      </div>

      <div class="col-lg-3">
        <h2>&nbsp;</h2>
        <div class="btn-group-lg">
          <!--
            <button type="button" class="btn btn-primary" onclick="doConnect();" id="connect"><span class="glyphicon glyphicon-refresh"></span> Connect</button>
            -->
          <% if (isBroadcaster) { %> 
          <div class="row h4" >Video source: <select id="videosrc"></select><br></div>
          <button type="button" class="btn btn-danger" id="addVideo"><span class="glyphicon glyphicon-facetime-video"></span> Add Video</button>
          <script>
            $('#addVideo').click(function(){
              addVideo();
            });
          </script>
          <% } %>

        </div>
      </div>
    </div>
  </div>
