<div class="container">
  <div class="row" >
    <div class="col-md-9">
      <h2><%= (channel.name || "Not Found") %><small> currently live</small></h2>

      <% if ( !_.isUndefined(channel) && channel.id) { %>
      <span id="currentChannelId" style="display:none;"><%= channel.id %></span>
      <% } %>

      <div onclick="OpenNewTab(addVideo)" id="localVideoContainer">
        <video id="localVideo"  width="640" height="360" controls autoplay ></video>
      </div>

      <div class="row h4">
        <div class="col-md-1">
          <span class="glyphicon glyphicon-eye-open"></span> <em id="viewers">33</em>
        </div>
        <div class="col-md-1">
          <span class="glyphicon glyphicon-user"></span> <em id="peers">4</em>
        </div>
      </div>
        <!--
          <h4>Description</h4>
          <p>This is the description.</p>
        -->
      </div>

      <div class="col-md-3">
        <h2>&nbsp;</h2>
        <div class="btn-group-lg" style="padding-left: 80px;">
         <!-- Check if the user is a broadcaster -->
         <% if (typeof channel !== 'undefined' && typeof req.session.user !== 'undefined' && channel.owner.id === req.session.user.id) { %>
         <!--             <div class="row h4" >Video source: <select id="videosrc"></select><br></div> -->
         <button type="button" class="btn btn-danger" id="addVideo"><span class="glyphicon glyphicon-facetime-video"></span> Start Video</button>
         <% } %>

       </div>
     </div>
   </div>
 </div>