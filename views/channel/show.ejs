<div class="row">
  <div class="col-sm-9">
    <h2><%= (channel.name || "Not Found") %><small> currently live</small></h2>
    <% if ( !_.isUndefined(channel) && channel.id) { %>
      <span id="currentChannelId" style="display:none;"><%= channel.id %></span>
    <% } %>

    <!-- Determine whether user on the watch page is a a broadcaster.
         Broadcasters will have option to click on video container & given option to start video
    -->
    <% if (typeof channel !== 'undefined' && typeof req.session.user !== 'undefined' && channel.owner.id === req.session.user.id) { %>
      <div onclick="addVideo(); this.onclick=null;" id="localVideoContainer" style="width:640px;height:480px;background-color:#ccc;margin-bottom:10px;overflow:hidden;">
    <% } else { %>
      <div id="localVideoContainer" style="width:640px;height:480px;background-color:#ccc;margin-bottom:10px;overflow:hidden;">
      <% } %>
      <video id="localVideo"  width="640" height="480" controls hd="1" autoplay autohide="2" ></video>
    </div>
    <div class="row h6">
      <div class="col-sm-4">
        <span class="fui-eye"></span> <strong id="viewers">33</strong>
        <span class="fui-user"></span> <strong id="peers">4</strong>
      </div>
    </div>
    <!--
      <h4>Description</h4>
      <p>For those who can't come to lecture</p>
    -->
  </div>

  <div class="col-sm-3">
    <h2>&nbsp;</h2>
    <div class="btn-group-lg">
    <!-- Check if the user is a broadcaster -->
    <% if (typeof channel !== 'undefined' && typeof req.session.user !== 'undefined' && channel.owner.id === req.session.user.id) { %>
      <!-- <div class="row h4" >Video source: <select id="videosrc"></select><br></div> -->
      <button type="button" class="btn btn-danger" id="addVideo"><span class="glyphicon glyphicon-facetime-video"></span> Start Video</button>
    <% } %>

  </div>
</div>

<script>
function addVideo() {
  $("#addVideo").click();
}
</script>
