<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display --> 
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
      <a class="navbar-brand" href="\">p2pcast</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling --> 
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li class="toggle"><a href="#">Channel</a></li>
        <li><a href="/channel">Browse</a></li>

      </ul>

        <!--
          Dropdown login menu, show only if the user is not logged in
        -->
        <% if ( !req.session.user ) { %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown" id="menu1">
           <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
             Sign In
             <b class="caret"></b>
           </a>
           <div class="dropdown-menu">
             <form role="form">
               <fieldset class='textbox' style="width: ; padding:10px;">
                <div class="form-group">
                  <label for="emailInput">Email address</label>
                  <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <label for="passwordInput">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <input id="user_remember_me" style="float: left; margin-right: 10px;" type="checkbox" name="user[remember_me]" value="1" />
                <label class="string optional" for="user_remember_me"> Remember me</label>
                <li class="divider"></li>
                <input class="btn btn-primary" style="clear: left; width: 100%; height: 32px; font-size: 13px;"  value="Sign In" id="login" />
              </fieldset>
            </form>
          </div>
        </li>
      </ul>

      <!-- Handle login redirect -->
      <script>
        $('#login').click(function() { 
          var email = $("#email").val();
          var password = $("#password").val();
          if (email && password) {
            $.post(
              '/login',
              {email: email, password: password },
              function (res) {
                res.redirect('/');
              }
              );
            location.reload(false);
          } else {
            alert("A username and password is required");
          }
        });
      </script>

      <ul class="nav navbar-nav navbar-right">
        <li>
          <a href="#" ><span class="glyphicon glyphicon-cog"></span> Register  </a>
        </li>
      </ul>
      <% } else { %> 

      <ul class="nav navbar-nav navbar-right">
       <li>
        <button type="button" class="btn btn-default navbar-btn" id="logout">Sign Out</button>
      </li>
    </ul>
    <!-- Handle logout redirect -->
    <script>
      $('#logout').click(function() { 
       $.post(
        '/logout',
        function(res){
         res.redirect('/'); 
       }
       );
       location.reload(true);
     });
    </script>
    
    <% } %>



    <!-- check that channel is not undefined and that the user is a broadcaster/channel owner -->
    <% if ( (typeof channel !== 'undefined' && channel.owner.id === req.session.user) ) { %>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span> Configure <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#">Set max viewers</a></li>
          <li><a href="#">Enable chat</a></li>
          <li class="divider"></li>
          <li><a href="#">Release channel name</a></li>
        </ul>
      </li>
      <li class="divider-vertical"></li>
    </ul>
    <% } %> <!-- end if -->
  </div><!-- /.navbar-collapse --> 
</div><!-- /.container-fluid --> 
</nav>
